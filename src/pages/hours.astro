---
import Navbar from "../components/Navbar.astro";
import ImageBar from "../components/ImageBar.astro";
import roti from '../assets/vegsoup.jpg';
import {Image} from 'astro:assets';
---

<html lang="en">
    <head>
        <title>Hours | MADRAS</title>
    </head>
    <body>
        <Navbar/>
        <ImageBar src={roti}/>
        <div id="tim">
            <div class="text-contain">
                <h1>Dunwoody Village</h1>
                <p>
                    1426 Dunwoody Village Pkwy,
                    Dunwoody, GA, 30338
                </p>
            </div>
            <div class="text-contain">
                <h1>Hours</h1>
                <p>
                    Monday - Saturday: 11AM - 9PM
                    Sunday: 12PM - 8PM
                </p>
            </div>
            <!-- <Image/> -->
        </div>
        <div id="map">
            <div style="max-width:100%;overflow:hidden;color:red;width:100%;height:70vh;">
                <div id="google-maps-display" style="height:100%; width:100%;max-width:100%;">
                  <iframe style="height:100%;width:100%;border:0;" frameborder="0" src="https://www.google.com/maps/embed/v1/place?q=1426+Dunwoody+Village+Parkway&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"></iframe>
                </div>
                <a class="googlemaps-made" href="https://kbj9qpmy.com/hrn" id="inject-map-data">InMotion Hosting</a>
                <style>
                  #google-maps-display .text-marker {}
              
                  .map-generator {
                    max-width: 100%;
                    max-height: 100%;
                    background: none;
                }
                </style>
            </div>
        </div>
        <!-- footer -->
    </body>
</html>